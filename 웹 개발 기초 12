  /* div {
    text-align: center;
} */

.position div {
    width: 100px;
    height: 100px;
}

.float div {
    width: 100px;
    height: 100px;
}

.display div {
    width: 100px;
    height: 100px;
}

.a {
    background-color: yellow;
}

.b {
    background-color: green;
}

.c {
    background-color: blue;
}

/* position 주기 */
.position {
    position: relative;
    height: 100px;
}

.position .a {
    position: absolute;
    left: 0;
}

.position .b {
    position: absolute;
    left: 100px;
}

.position .c {
    position: absolute;
    left: 200px;
}

/* float 주기 */

.float {
    height: 100px;
}

.float .a {
    float: left;
}

.float .b {
    float: left;
}

.float .c {
    float: left;
}

/* display 주기 */

.display .a {
    display: inline-block;
}

.display .b {
    display: inline-block;
}

.display .c {
    display: inline-block;
}
  
